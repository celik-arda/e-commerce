    "version": "2.0.0",
    "tasks": [
        {
            "label": "vite:dev",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Vite server starting.*",
                    "endsPattern": ".*Local:.*"
                }
            }
        }
    ]
}


